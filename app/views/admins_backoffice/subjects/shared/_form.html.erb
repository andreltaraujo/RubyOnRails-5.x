  <% if @subject.errors.any?%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <ul>
        <% @subject.errors.full_messages.each do |message| %>
          <li>
            <strong><%= message %></strong>
          </li>
        <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <body class="bg-gradient-primary">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-lg-10">
          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row justify-content-md-center">
                <div class="col-lg-6">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4"><%= "#{action_message}" %>  <%= @subject.model_name.human %></h1>
                    </div>
                    <hr>
                    <%= form_with(model: [:admins_backoffice, @subject ], local: true,
                    html: { class: "user" }) do |form| %>
                      <div class="form-group">
                        <%= form.text_field :description, class:"form-control form-control-user",
                        id:"exampleInputEmail", placeholder: @subject.model_name.human %>
                      </div>
                      <div class="row justify-content-md-center">
                        <div class="col-lg-6">
                          <button type="submit" class="btn btn-primary btn-user btn-block">
                            <%= t('label.Submit') %></button>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>