<!DOCTYPE html>
<html lang="en">
                
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title><%= @subjects.model_name.human(count: 2) %></title>

  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>

<body id="page-top">

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary"><%= t('headers.registered',
              model: @subjects.model_name.human(count: 2)) %></h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th><%= translate_method(@subjects, :id) %></th>
                      <th><%= translate_method(@subjects, :description) %></th>
                      <th class="text-center"><%= link_to new_admins_backoffice_subject_path,
                      class:"btn btn-success btn-circle btn-sm" do %>
                      <i class="fas fa-plus-circle"></i>
                      <% end %>
                      </th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th><%= translate_method(@subjects, :id) %></th>
                      <th><%= translate_method(@subjects, :description) %></th>
                      <th></th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% @subjects.each do |subject| %>                    
                      <tr>
                        <td><%= subject.id %></td>
                        <td><%= subject.description %></td>
                        <td class="text-center"><%= link_to edit_admins_backoffice_subject_path(subject),
                        class:"btn btn-info btn-circle btn-sm" do %>
                        <i class="fas fa-user-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_subject_path(subject), method: :delete,
                        class:"btn btn-danger btn-circle btn-sm",
                        data: {confirm: t('messages.subject.confirm',
                        item: subject.description)} do %>
                        <i class="fas fa-trash"></i>
                        <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <%= link_to "Logout", destroy_admin_session_path, method: :delete, class:"btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>

</body>

</html>

