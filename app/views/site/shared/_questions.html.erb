<main role="main">
  <div class="jumbotron">
    <div class="col-sm-8 mx-auto text-center">
      <% unless params[:term] %>
        <h3>QuestÃµes</h3>
      <% else %>
        <h3>Resultado da pesquisa para o termo:</h3>
        <hr>
        <h3>"<%= params[:term] %>"</h3>
      <% end %>
    </div>
  </div>
</main>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path, local: true do |form| %>
    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h6 class="border-bottom border-gray pb-2 mb-0"><%= question.description %></h6>
        <% question.answers.each do |answer| %>
          <div class="media text-muted pt-3">
            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <strong class="d-block text-gray-dark"><%= radio_button_tag 'answer_id', answer.id %> <%= answer.description %></strong>
            </p>
          </div>
        <% end %><br>
        <%= form.submit t('label.Answer'), class:"btn btn-outline-secondary btn-sm" %>
    </div>
  <% end %>
<% end %>
<%= paginate @questions%>